{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}

<div class="container mt-5">
    <h1>Nos produits</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-3 pointer" onclick="redirectToProduct('{{ path('app_product_show', {'slug': product.slug}) }}')">
                <img src='uploads/images/products/{{ product.image }}' class="card-img-top" alt="{{ product.name }}">
                <div class="text-center bg-light">
                    <h5><small>{{ product.subtitle }}</small></h5>
                    <p class="font-weight-bold">{{ ((product.price/100)*1.20)|number_format(2, ',') }}â‚¬</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

    <script>
        function redirectToProduct(slug)
        {
            document.location.href = slug ? slug : '/';
        }
    </script>
{% endblock %}
